{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "indent": ["error", 2],
    "key-spacing": ["error"],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", 120],
    "no-console": "off",
    "no-var": "error",
    "prefer-const": "error",
    "quotes": ["error", "double", {"allowTemplateLiterals": true}],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {"anonymous": "always", "named": "never", "asyncArrow": "always"}]
  }
}
